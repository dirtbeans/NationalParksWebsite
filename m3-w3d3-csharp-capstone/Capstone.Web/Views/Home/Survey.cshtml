@using Capstone.Web.Models;
@model Capstone.Web.Models.Survey

@{
    ViewBag.Title = "Survey";
}

@using (Html.BeginForm("PostSurvey", "Home", FormMethod.Post))
{
    <div class="formInputGroup">
        @Html.Label("ParkCode", "Which park did you visit?")
        @Html.DropDownListFor(m => m.ParkCode, Model.Parks)
    </div>
    <div class="formInputGroup">
        @Html.Label("State", "State")
        @Html.DropDownListFor(m => m.State, Survey.States)
    </div>
    <div class="formInputGroup">
        @Html.Label("CustomerExperienceLevel", "Satisfaction Score")
        @Html.DropDownListFor(m => m.CustomerExperienceLevel)
    </div>
    <div class="formInputGroup">
        @Html.Label("AdditionalFeedback", "Feedback (optional):")
        @Html.TextAreaFor(m => m.AdditionalFeedback)
    </div>

    <button class="formSubmitButton">SUBMIT!</button>
}