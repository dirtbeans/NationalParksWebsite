@model IEnumerable<Capstone.Web.Models.Park>

@{
    ViewBag.Title = "Index";
}

<h1>Park View</h1>


<section>


    @foreach (var item in Model)
    {

        var parkImage = "/Content/images/parks/" + item.ParkCode.ToLower() + ".jpg";



        <img class="img-left" src=@parkImage />

        <h2>
            <a class=" parklinks" href="@Url.Action("Detail", "Details", new { id = item.ParkCode})">

                @Html.DisplayFor(modelItem => item.ParkName)
            </a>

        </h2>


        <p>
            @Html.DisplayFor(modelItem => item.ParkDescription)
        </p>



    }

</section>
