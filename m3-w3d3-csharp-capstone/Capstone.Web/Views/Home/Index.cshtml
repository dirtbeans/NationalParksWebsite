    <div>
       
            <img align="left" class=" small" src=@parkImage alt="Park" />
            @*<p class=" left">located in  @Html.DisplayFor(modelItem => item.State)</p>*@
        
       
            <h3 align=" right">
                <a style="text-decoration:none;" href="@Url.Action("Detail", "Home", new { id = item.ParkCode})">
